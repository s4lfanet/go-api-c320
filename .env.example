# Application Environment
APP_ENV=development

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8081
SERVER_MODE=development

# =====================================================
# ZTE C320 OLT Firmware Version Configuration
# =====================================================
# Supported values: v2.1, v2.2
# v2.1 = For ZTE C320 with firmware V2.1.x (uses different OID structure)
# v2.2 = For ZTE C320 with firmware V2.2.x and newer
# Default: v2.1
ZTE_FIRMWARE_VERSION=v2.1

# SNMP Configuration
SNMP_HOST=192.168.1.1
SNMP_PORT=161
SNMP_COMMUNITY=public

# =====================================================
# Optional: Custom OID Override (Advanced Users)
# =====================================================
# Uncomment and modify these if your OLT has different OID structure
# These override the default OIDs for the selected firmware version
#
# OLT_BASE_OID=.1.3.6.1.4.1.3902.1082
# ONU_ID_NAME_PREFIX=.500.10.2.3.3.1.2
# ONU_TYPE_PREFIX=.500.10.2.3.3.1.5
# ONU_SERIAL_NUMBER_PREFIX=.500.10.2.3.3.1.18
# ONU_RX_POWER_PREFIX=.500.20.2.2.2.1.10
# ONU_TX_POWER_PREFIX=.500.20.2.2.2.1.11
# ONU_STATUS_ID_PREFIX=.500.10.2.3.8.1.4
# ONU_IP_ADDRESS_PREFIX=.500.10.2.3.3.1.16
# ONU_DESCRIPTION_PREFIX=.500.10.2.3.3.1.3
#
# Board PON Base IDs (usually don't need to change)
# BOARD1_ONU_ID_BASE=285278464
# BOARD1_ONU_TYPE_BASE=285278464
# BOARD2_ONU_ID_BASE=285278720
# BOARD2_ONU_TYPE_BASE=285278720

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
# Optimized pool settings for concurrent load (reduced from 200/12000)
REDIS_MIN_IDLE_CONNECTIONS=10
REDIS_POOL_SIZE=100
REDIS_POOL_TIMEOUT=30

# TLS/HTTPS Configuration (Production)
# Set USE_TLS=true to enable HTTPS
USE_TLS=false
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# CORS Configuration
# Comma-separated list of allowed origins
# For development: http://localhost:3000,http://localhost:8080
# For production: https://yourdomain.com
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Accept,Authorization,Content-Type,X-API-Key,X-Request-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=300

# Security (for future use with API Gateway)
# API_KEY=your-secure-api-key-here

# =====================================================
# Telnet Configuration (for ONU provisioning & config)
# =====================================================
TELNET_HOST=136.1.1.100
TELNET_PORT=23
TELNET_USERNAME=admin
TELNET_PASSWORD=your_telnet_password_here
TELNET_ENABLE_PASSWORD=your_enable_password_here

# Telnet Timeouts (in seconds)
TELNET_TIMEOUT=30
TELNET_CONNECT_TIMEOUT=10
TELNET_READ_TIMEOUT=30
TELNET_WRITE_TIMEOUT=10

# Telnet Retry Configuration
TELNET_RETRY_COUNT=3
TELNET_RETRY_DELAY=2

# Session Management
TELNET_POOL_SIZE=1
TELNET_MAX_IDLE_TIME=300

# Telnet Prompts (customize if different)
TELNET_PROMPT_USER=ZXAN>
TELNET_PROMPT_ENABLE=ZXAN#
TELNET_PROMPT_CONFIG=ZXAN(config)#
